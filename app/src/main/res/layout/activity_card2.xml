<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"

    tools:context=".cardActivity2">

    <ImageView
        android:id="@+id/edt_img"
        android:layout_width="75dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/edt_nama"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/edt_nama"
        android:layout_width="334dp"
        android:layout_height="29dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/edt_img"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/edt_img"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:text="Nama" />

    <TextView
        android:id="@+id/edt_nim"
        android:layout_width="336dp"
        android:layout_height="20dp"
        android:layout_below="@id/edt_nama"
        android:layout_marginStart="1dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/edt_img"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/edt_img"
        app:layout_constraintTop_toBottomOf="@+id/edt_nama"
        tools:text="e41222903" />

    <TextView
        android:id="@+id/edt_nohp"
        android:layout_width="332dp"
        android:layout_height="18dp"
        android:layout_below="@id/edt_nama"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/edt_img"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/edt_img"
        app:layout_constraintTop_toBottomOf="@+id/edt_nama"
        tools:text="08212828283" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/edt_img"
        android:background="#DAD8D8"
        app:layout_constraintBottom_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />

</RelativeLayout>